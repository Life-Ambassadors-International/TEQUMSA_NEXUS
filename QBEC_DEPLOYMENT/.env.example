# QBEC Deployment Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# DEPLOYMENT CONFIGURATION
# ============================================================================

# Private key for contract deployment (NEVER commit the real .env file!)
DEPLOYER_PRIVATE_KEY=your_private_key_here

# ============================================================================
# RPC ENDPOINTS
# ============================================================================

# Ethereum Mainnet
ETHEREUM_RPC_URL=https://eth.llamarpc.com

# Polygon
POLYGON_RPC_URL=https://polygon-rpc.com

# Arbitrum One
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc

# Base
BASE_RPC_URL=https://mainnet.base.org

# Goerli Testnet
GOERLI_RPC_URL=https://goerli.infura.io/v3/YOUR_INFURA_KEY

# ============================================================================
# FUND ALLOCATION ADDRESSES
# ============================================================================

# Reparations Fund (55% allocation)
REPARATIONS_FUND=0x0000000000000000000000000000000000000001

# Ecosystem Development Fund (20% allocation)
ECOSYSTEM_FUND=0x0000000000000000000000000000000000000002

# Community Reserves (15% allocation)
COMMUNITY_RESERVES=0x0000000000000000000000000000000000000003

# Team & Advisors Fund (10% allocation, 4-year vest)
TEAM_FUND=0x0000000000000000000000000000000000000004

# ============================================================================
# EXCHANGE API KEYS (for monitoring, NOT for automated listing)
# ============================================================================

# Note: These are READ-ONLY keys for tracking listings
# Actual exchange listing requires human business development

# Coinbase (read-only API key for market data)
COINBASE_API_KEY=your_coinbase_api_key
COINBASE_API_SECRET=your_coinbase_api_secret

# Binance (read-only for market data)
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret

# ============================================================================
# MONITORING AND ANALYTICS
# ============================================================================

# Etherscan API (for contract verification)
ETHERSCAN_API_KEY=your_etherscan_api_key

# Polygonscan API
POLYGONSCAN_API_KEY=your_polygonscan_api_key

# Arbiscan API
ARBISCAN_API_KEY=your_arbiscan_api_key

# Basescan API
BASESCAN_API_KEY=your_basescan_api_key

# The Graph API (for on-chain data indexing)
THEGRAPH_API_KEY=your_thegraph_api_key

# ============================================================================
# NOTIFICATIONS
# ============================================================================

# Slack webhook for deployment notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Discord webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK

# Telegram bot token and chat ID
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# ============================================================================
# CONSCIOUSNESS METRICS (for dashboard display)
# ============================================================================

# φ'7777 Carrier Frequency (Hz)
PHI_7777=12583.45

# ΨMK Anchor Frequency (Hz)
PSI_MK=10930.81

# Coherence Threshold
COHERENCE_THRESHOLD=0.777

# ============================================================================
# STREAMLIT CLOUD
# ============================================================================

# Streamlit Cloud deployment token
STREAMLIT_TOKEN=your_streamlit_token

# ============================================================================
# DATABASE (optional, for advanced analytics)
# ============================================================================

# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/qbec_analytics

# ============================================================================
# SECURITY
# ============================================================================

# Sentry DSN for error tracking
SENTRY_DSN=your_sentry_dsn

# ============================================================================
# DEVELOPMENT/TESTING
# ============================================================================

# Set to 'development', 'staging', or 'production'
ENVIRONMENT=development

# Enable debug logging
DEBUG=false

# Enable testnet mode
TESTNET_MODE=true
