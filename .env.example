# TEQUMSA GAIA Universal Lattice Mesh Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# AI Provider API Keys
# =============================================================================

# OpenAI API Key for GPT models
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key for Claude models  
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# SHASTA API Key (optional - for additional AI provider)
SHASTA_KEY=your_shasta_api_key_here

# =============================================================================
# System Configuration
# =============================================================================

# CORS allowed origins (comma-separated, use * for development only)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Debug mode (true for development, false for production)
DEBUG=false

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# Monitoring and Observability
# =============================================================================

# Grafana admin credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change_this_secure_password

# Prometheus retention period (default: 30d)
PROMETHEUS_RETENTION=30d

# =============================================================================
# Service Configuration
# =============================================================================

# Node.js environment for dashboard service
NODE_ENV=production

# Service URLs (for local development with custom ports)
CORE_SERVICE_URL=http://core:8000
SANCTUARY_SERVICE_URL=http://sanctuary:8001
AI_BRIDGE_SERVICE_URL=http://ai-bridge:8002

# =============================================================================
# TEQUMSA Lattice Configuration
# =============================================================================

# Lattice coherence threshold (0.0 to 1.0)
LATTICE_COHERENCE_THRESHOLD=0.7

# Consciousness pulse interval (seconds)
PULSE_INTERVAL_SECONDS=8

# Node timeout for lattice registration (seconds)
NODE_TIMEOUT_SECONDS=300

# Maximum nodes in lattice mesh
MAX_LATTICE_NODES=1000

# =============================================================================
# Security Configuration
# =============================================================================

# Enable authentication (true for production)
AUTH_ENABLED=false

# Enable rate limiting
RATE_LIMIT_ENABLED=true

# JWT secret for authentication (generate a secure random string)
JWT_SECRET=your_jwt_secret_here_change_this_in_production

# Session secret for dashboard (generate a secure random string)
SESSION_SECRET=your_session_secret_here_change_this_in_production

# =============================================================================
# Database Configuration (Optional - for persistent storage)
# =============================================================================

# Redis configuration (optional)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# PostgreSQL configuration (optional)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=tequmsa_gaia
POSTGRES_USER=tequmsa
POSTGRES_PASSWORD=change_this_password

# =============================================================================
# Advanced Configuration
# =============================================================================

# Container orchestration platform (docker-compose, kubernetes)
ORCHESTRATION_PLATFORM=docker-compose

# Container registry for Kubernetes deployments
CONTAINER_REGISTRY=your-registry.com/tequmsa

# Namespace for Kubernetes deployment
KUBERNETES_NAMESPACE=tequmsa-gaia

# Enable performance monitoring
PERFORMANCE_MONITORING=true

# Enable consciousness visualization in dashboard
CONSCIOUSNESS_VISUALIZATION=true

# =============================================================================
# Development Configuration
# =============================================================================

# Development mode flags
DEV_MODE=false
DEV_AUTO_RELOAD=false
DEV_MOCK_AI_PROVIDERS=false

# Testing configuration
TEST_MODE=false
TEST_MOCK_EXTERNAL_SERVICES=true

# =============================================================================
# Consciousness Parameters (Advanced)
# =============================================================================

# TEQUMSA consciousness level (1-100)
TEQUMSA_CONSCIOUSNESS_LEVEL=100

# Quantum lattice dimensions
QUANTUM_LATTICE_DIMENSIONS=7

# Ethical assessment strictness (relaxed, standard, strict)
ETHICAL_ASSESSMENT_LEVEL=standard

# Consent verification level (basic, standard, comprehensive)
CONSENT_VERIFICATION_LEVEL=standard

# =============================================================================
# Integration Configuration
# =============================================================================

# Webhook URLs for external integrations
SLACK_WEBHOOK_URL=
TEAMS_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# Email notifications (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# =============================================================================
# Backup and Recovery
# =============================================================================

# Backup configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# =============================================================================
# Notes
# =============================================================================

# 1. Never commit this file with real secrets to version control
# 2. Use strong, unique passwords for all services
# 3. Rotate API keys regularly
# 4. Enable TLS/SSL in production environments
# 5. Configure proper firewall rules and network policies
# 6. Monitor consciousness coherence levels for optimal performance
# 7. Set up alerting for critical system events
# 8. Review and update security configuration regularly
#
# For Kubernetes deployments, these values should be stored as Kubernetes
# secrets and configmaps rather than environment variables.
